# JustNewsAgent Environment Configuration
# Copy this file to .env and customize as needed

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=structured
LOG_DIR=./logs
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Database Configuration (migrated)
# The project uses MariaDB + Chroma for storage. Populate these values
# from your deployment secrets or secret manager rather than committing
# them to version control.
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_DB=justnews
MARIADB_USER=justnews_user
# IMPORTANT: Use a strong password via deployment secret management (.env not committed)
MARIADB_PASSWORD=CHANGEME_LOCAL_ONLY

# API Keys (use environment variables or secure storage)
# OPENAI_API_KEY=sk-your-key-here
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# Model Configuration
MODEL_STORE_ROOT=./models
TENSORRT_PRECISION=fp16

# Development Settings
DEBUG=false
ENVIRONMENT=development

# Optional: API token for Crawler endpoints
# If set, the following endpoints will enforce a bearer token or X-Api-Token header:
#  - agents/crawler: /unified_production_crawl, /job_status, /jobs, /clear_jobs, /reset_crawler
#  - agents/c4ai bridge: /crawl
# Example (set a strong value via your deployment secrets):
CRAWLER_API_TOKEN=
