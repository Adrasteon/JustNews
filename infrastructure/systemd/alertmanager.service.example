[Unit]
Description=Prometheus Alertmanager (Example Service)
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=alertmanager
Group=alertmanager
Environment=ALERTMANAGER_CONFIG_FILE=/etc/alertmanager/alertmanager.yml
Environment=ALERTMANAGER_STORAGE_PATH=/var/lib/alertmanager
ExecStart=/usr/local/bin/alertmanager \
  --config.file=${ALERTMANAGER_CONFIG_FILE} \
  --storage.path=${ALERTMANAGER_STORAGE_PATH}
Restart=on-failure
RestartSec=5
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
