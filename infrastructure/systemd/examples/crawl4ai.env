# Example per-instance env for justnews@crawl4ai
# Copy to /etc/justnews/crawl4ai.env and edit as needed.

# Python interpreter to use when launching agents (absolute path recommended)
PYTHON_BIN=/home/adra/miniconda3/envs/justnews-v2-py312/bin/python

# Crawl4AI host/port (agents read these from global.env or per-instance file)
CRAWL4AI_HOST=127.0.0.1
CRAWL4AI_PORT=3308
CRAWL4AI_BASE_URL=
CRAWL4AI_USE_LLM=true
CRAWL4AI_MODEL_CACHE_DIR=/var/lib/justnews/crawl4ai_model_cache

# Paywall persistence (set to false to avoid DB writes)
CRAWL4AI_PERSIST_PAYWALLS=true

# Optional UA/proxy tuning
CRAWL4AI_PROXY_POOL=

# Log level for uvicorn when using agents/crawl4ai/main.py
CRAWL4AI_LOG_LEVEL=info

# Optional: API token to enforce on the Crawl4AI bridge endpoints
# If set, the /crawl endpoint requires a bearer token or X-Api-Token header.
CRAWLER_API_TOKEN=
