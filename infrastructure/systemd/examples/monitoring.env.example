# Prometheus service configuration
PROMETHEUS_BIN=/opt/justnews/monitoring/prometheus/prometheus
PROMETHEUS_CONFIG_FILE=/etc/justnews/monitoring/prometheus.yml
PROMETHEUS_DATA_DIR=/var/lib/justnews/prometheus
PROMETHEUS_CONSOLE_TEMPLATES=/opt/justnews/monitoring/prometheus/consoles
PROMETHEUS_CONSOLE_LIBRARIES=/opt/justnews/monitoring/prometheus/console_libraries
PROMETHEUS_RETENTION=30d
PROMETHEUS_EXTRA_FLAGS=

# Grafana service configuration
GRAFANA_BIN=/opt/justnews/monitoring/grafana/bin/grafana-server
GRAFANA_HOME_PATH=/opt/justnews/monitoring/grafana
GF_SERVER_HTTP_ADDR=0.0.0.0
GF_SERVER_HTTP_PORT=3000
GF_SERVER_DOMAIN=localhost
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=change_me
GF_PATHS_DATA=/var/lib/justnews/grafana
GF_PATHS_LOGS=/var/log/justnews/grafana
GF_PATHS_PLUGINS=/var/lib/justnews/grafana/plugins
GF_PATHS_PROVISIONING=/etc/justnews/monitoring/grafana/provisioning

# Node exporter service configuration
NODE_EXPORTER_BIN=/opt/justnews/monitoring/node_exporter/node_exporter
NODE_EXPORTER_TEXTFILE_DIR=/var/lib/node_exporter/textfile_collector
NODE_EXPORTER_LISTEN_ADDRESS=0.0.0.0:9100
NODE_EXPORTER_EXTRA_FLAGS=
